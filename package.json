{
  "name": "raindrop",
  "displayName": "Raindrop",
  "version": "0.1.0",
  "description": "Claude AI assistant for Visual Studio Code - Seamlessly integrate Claude's capabilities into your development workflow",
  "publisher": "conscious-robot",
  "pricing": "Free",
  "preview": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/talamantez/raindrop"
  },
  "license": "MIT",
  "qna": "https://github.com/talamantez/raindrop/issues",
  "bugs": {
    "url": "https://github.com/talamantez/raindrop/issues"
  },
  "activationEvents": [
    "onCommand:repo-scaffold.analyze",
    "onCommand:repo-scaffold.generateReport"
  ],
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Machine Learning",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "claude",
    "ai",
    "assistant",
    "anthropic",
    "code",
    "documentation",
    "productivity"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "repo-scaffold.analyze",
        "title": "Analyze Repository"
      },
      {
        "command": "repo-scaffold.generateReport",
        "title": "Generate Scaffold Report"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.2.2"
  }
}
